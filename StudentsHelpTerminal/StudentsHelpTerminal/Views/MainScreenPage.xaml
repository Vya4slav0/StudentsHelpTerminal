    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TOP BLOCK-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--PHOTO-->
            <Border BorderBrush="DarkBlue" BorderThickness="3"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Margin="0 0 15 0"
                        Width="{Binding RelativeSource={RelativeSource Mode=Self}, 
                                        Path=ActualHeight, 
                                        Converter={StaticResource DivideByConverter}, 
                                        ConverterParameter='1,33'}"
                        Height="auto">
                <Border.Background>
                    <SolidColorBrush Color="AliceBlue" Opacity="0.7"/>
                </Border.Background>
                <Image Source="{Binding Path=Photo}" Stretch="UniformToFill"/>
            </Border>

            <!--TEXT INFO-->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1">
                    <TextBlock Text="{Binding Path=Surname}" FontSize="30" Foreground="DarkBlue" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Path=Name}" FontSize="30" Foreground="DarkBlue" FontWeight="Bold"/>
                </StackPanel>
                <Rectangle Grid.Column="1" Grid.Row="1" Fill="DarkBlue" Margin="2 0"/>
                <StackPanel Grid.Column="2" Grid.Row="1">
                    <TextBlock Text="{Binding Path=Group}" FontSize="15" Foreground="DarkBlue"/>
                    <TextBlock Text="{Binding Path=CardNum}" FontSize="15" Foreground="DarkBlue"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!--BOTTOM BLOCK-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!--TABLE-->
            <Rectangle Stroke="DarkBlue" StrokeThickness="3"
                       Fill="AliceBlue"
                       Opacity="0.7"
                       />

            <!--BUTTONS-->

            <StackPanel Grid.Column="2">
                <StackPanel.Resources>
                    <Style TargetType="custom:ButtonCuttedCorners">
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Background" Value="{StaticResource BrushLight}"/>
                        <Setter Property="Foreground" Value="{StaticResource BrushDark}"/>
                        <Setter Property="ClickColor" Value="{StaticResource ColorClick}"/>
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight, Converter={StaticResource DivideByConverter}, ConverterParameter=2}"/>
                        <Setter Property="Margin" Value="0 0 0 10"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                
                <custom:ButtonCuttedCorners Content="Карта колледжа"/>
                <custom:ButtonCuttedCorners Content="Очитстить информацию"/>
                <custom:ButtonCuttedCorners Content="Панель администратора" Command="{Binding Path=AdminWindowOpenCommand}"
                />
            </StackPanel>
        </Grid>

    </Grid>
</Page>
