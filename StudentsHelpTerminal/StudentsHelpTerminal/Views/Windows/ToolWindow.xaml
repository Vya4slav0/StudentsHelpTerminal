<Window x:Class="StudentsHelpTerminal.Views.Windows.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsHelpTerminal.Views.Windows"
        xmlns:views="clr-namespace:StudentsHelpTerminal.Views.DialogPages"
        xmlns:vm="clr-namespace:StudentsHelpTerminal.ViewModels"
        mc:Ignorable="d" 
        ShowInTaskbar="False" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow" 
        SizeToContent="WidthAndHeight">

    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:ChangeCardIdPageViewModel}">
            <views:ChangeCardIdPage/>
        </DataTemplate>

    </Window.Resources>
     
</Window>
