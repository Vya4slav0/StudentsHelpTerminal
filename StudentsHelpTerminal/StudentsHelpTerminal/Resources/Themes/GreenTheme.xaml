<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ColorDark" A="255" R="0" G="139" B="0"/>
    <SolidColorBrush x:Key="BrushDark" Color="{StaticResource ColorDark}"/>

    <Color x:Key="ColorLight" A="255" R="0xE8" G="0xF5" B="0xE9"/>
    <SolidColorBrush x:Key="BrushLight" Color="{StaticResource ColorLight}"/>

    <Color x:Key="ColorClick" A="255" R="0x2E" G="0x7D" B="0x32"/>
    <SolidColorBrush x:Key="BrushClick" Color="{StaticResource ColorClick}"/>

</ResourceDictionary>